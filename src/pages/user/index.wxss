/* pages/user/index.wxss */
.user-info {
  padding: 40rpx;
  background: #fff;
  border-radius: 16rpx;
  margin: 20rpx 0;
  text-align: center;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
}

.not-login {
  padding: 40rpx;
  color: #999;
}

.menu-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.menu-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  color: #333;
  font-size: 28rpx;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f5f5f5;
}